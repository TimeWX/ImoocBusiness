<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    >
    <HorizontalScrollView
        android:id="@+id/hsv_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_weixin_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="13dp">
                <ImageView
                    android:id="@+id/iv_weixin_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/comui_share_weixin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_weixin_view"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_999999"
                    android:textSize="13dp"
                    android:text="@string/share_weixin"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_moment_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="13dp">
                <ImageView
                    android:id="@+id/iv_moment_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/comui_share_weixin_pengyou"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_moment_view"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_999999"
                    android:textSize="13dp"
                    android:text="@string/share_weixin_moment"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_qq_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="13dp">
                <ImageView
                    android:id="@+id/iv_qq_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/comui_share_qq"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_qq_view"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_999999"
                    android:textSize="13dp"
                    android:text="@string/share_qq"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_qqzone_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="13dp">
                <ImageView
                    android:id="@+id/iv_qqzone_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/comui_share_qqzone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_qqzone_view"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_999999"
                    android:textSize="13dp"
                    android:text="@string/share_qzone"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_download_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="13dp"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/iv_download_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bg_download"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_download_view"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_999999"
                    android:textSize="13dp"
                    android:text="@string/download"/>
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/hsv_scroll_view"
        android:layout_marginTop="20dp"
        android:background="@color/color_cccccc"/>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_cdcdcd"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/cancel"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp"
        />




</RelativeLayout>